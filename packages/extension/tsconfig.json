{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "experimentalDecorators": true /* Add a polyfill for the Reflect API (examples below use reflect-metadata)  */,
    "emitDecoratorMetadata": true /* Add a polyfill for the Reflect API (examples below use reflect-metadata). */,
    "paths": {
      "@common/*": ["./src/common/*"],
      "@utils/*": ["./src/common/utils/*"],
      "@extentions/*": ["./src/extentions/*"],
      "@/*": ["./src/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist","**/*.js"]
}
